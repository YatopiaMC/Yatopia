--- /dev/null
+++ b/src/main/resources/opencl/net/glowstone/CLRandom.cl
@@ -0,0 +1,13 @@
+kernel void GenerateNoise(float base,
+             float fine,
+             global float* rands,
+             int length)
+{
+    int gid = get_global_id(0);
+
+    if (gid >= length) {
+        return;
+    }
+
+    rands[gid] = base * gid + fine / (base + gid) + 1 / gid;
+}
