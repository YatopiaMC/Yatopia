@@ -25,6 +25,14 @@ public class EntitySquid extends EntityWaterAnimal {
         this.bu = 1.0F / (this.random.nextFloat() + 1.0F) * 0.2F;
     }
 
+    // Purpur start
+    @Override
+    public AxisAlignedBB getAxisForFluidCheck() {
+        // Stops squids from floating just over the water
